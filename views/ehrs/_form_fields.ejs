<div class="form-row">
  <div class="form-item">
    <label>Title</label>
    <input type="text" name="title" value="<%= ehr.title %>">
  </div>

  <div class="form-item">
    <label>Patient</label>
    <select name="patient">
  <% patients.forEach(patient => { %>
    <% if (patient.id === ehr.patient) { %>
      <option selected label="<%= patient.amka %>" value="<%= patient.id %>">
    <% } else { %>
      <option label="<%= patient.amka %>" value="<%= patient.id %>">
    <% } %>
  <% }) %>
  </select>
</div>
</div>

<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label>File</label>
    <input type="file" name="fileup" class="ehr-cover filepond" >
  </div>

  <div class="form-item">
    <label>Description</label>
    <textarea name="description"><%= ehr.description %></textarea>
  </div>

</div>