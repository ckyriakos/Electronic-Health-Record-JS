<label>First Name</label>
<input type="text" name="firstName" value="<%= author.firstName %>">
<label>LAST Name</label>
<input type="text" name="lastName" value="<%= author.lastName %>">
<label>AMKA</label>
<input type="text" name="amka" value="<%= author.amka %>">
<label>Birth Date</label>
<input type="date" name="birthDate"
	   value="<%= author.birthDate == null ? '' :
	   author.birthDate.toISOString().split('T')[0] %>">
